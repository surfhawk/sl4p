{
    "__configver__": "C4",
    "__CAUTION__": " *** PLEASE BE CAREFUL TO MODIFY THIE DEFAULT CONFIG FILE *** ",


    "LOG" : {
        "use_console_print": true,

        "logging_level": "DEBUG",
        "logging_format": "basic",
        "logging_timestamp_tpl": "%Y.%m.%d-%H:%M:%S",

        "logfile_savedir": "./sl4p_logs",
        "logfile_name": "",

        "save_period_type": "MB",
        "save_period_interval": 100,
        "save_files_nlimit": 20,

        "purge_window_hours": 8800
    },

    "SNIPPET_LOG" : {
        "logging_level": "DEBUG",
        "use_custom_savedir": "./sl4p_logs/snippet_logs",
        "use_propagate": true,
        "enabled_snippet_dict": {
        }
    },
    
    "MSG_FORMAT" : {
        "simple": "%(asctime)s | %(levelname)-8s :: %(message)s",
        "basic": "%(asctime)s | %(levelname)-8s - %(filename)-12s (%(lineno)4d) :: %(message)s",
        "detailid": "%(asctime)s.%(msecs)03d | %(levelname)-8s [P%(process)d T%(thread)d] %(filename)-10s - %(funcName)-10s (%(lineno)4d) :: %(message)s",
        "detail": "%(asctime)s.%(msecs)03d | %(levelname)-8s [P.%(processName)s %(threadName)s] %(filename)-10s - %(funcName)-10s (%(lineno)4d) :: %(message)s",
        "adap": "%(asctime)s.%(msecs)03d - %(relativeCreated)7d ms [ P.%(process)d - %(processName)s | T.%(thread)d - %(threadName)s ] <%(name)s> logger\n%(levelname)-8s| %(filename)-12s - %(funcName)-10s (%(lineno)4d) :: %(message)s\n",
        "adap1": "%(asctime)s.%(msecs)03d - %(relativeCreated)7d ms [ P.%(process)d - %(processName)s | T.%(thread)d - %(threadName)s ] Logger_%(name)s - %(levelname)-8s \n %(filename)-12s - %(funcName)-12s (%(lineno)4d) :: %(message)s \n"
    }
}